{% extends "template.twig" %}
{% block content %}
    <!-- Page Layout here -->
<div class="row">
    <div class="col s12 m12 l12">
        <div class="card">
            <a class="btn btn-floating btn-large waves-effect waves-light pull-right cyan darken-2" style="top:-26px;left:28px;">
                <i class="material-icons">playlist_add</i>
            </a>
            <div class="row">
                <div class="col s4 m4 l4 offset-l3">
                    <div class="input-field" >
                        <i class="fa fa-search material-icons prefix" aria-hidden="true"></i>
                        <input type="text" id="autocomplete">
                        <label for="autocomplete">Filtre</label>
                    </div>
                </div>
                <div class="col s2 m2 l2 input-field">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12">
                    <table class="responsive-table centered striped">
                        <thead>
                        <tr>
                            <th data-field="email">Email</th>
                            <th data-field="name">Date de modification</th>
                            <th data-field="price">Date de cr√©ation</th>
                            <th data-field="price">Statut</th>
                            <th data-field="price">Action</th>
                        </tr>
                        </thead>

                        <tbody>
                            {% for request in requests %}
                                <tr>
                                    <td>{{ request.contact }}</td>
                                    <td>{{ request.modificationDate }}</td>
                                    <td>{{ request.creationDate }}</td>
                                    <td>{{ request.status }}</td>
                                    <td><a href="#!" class="btn btn-floating"><i class="material-icons">mode_edit</i></a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="col s12 m12 l12">
                    <ul class="pagination center">
                        <li class="disabled"><a href="#!"><i class="fa fa-chevron-left material-icons"></i></a></li>
                        <li class="active"><a href="#!">1</a></li>
                        <li class="waves-effect"><a href="#!">2</a></li>
                        <li class="waves-effect"><a href="#!">3</a></li>
                        <li class="waves-effect"><a href="#!">4</a></li>
                        <li class="waves-effect"><a href="#!">5</a></li>
                        <li class="waves-effect"><a href="#!"><i class="fa fa-chevron-right material-icons"></i></a></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
    <script>
        $(document).ready(function() {

        });
    </script>
{% endblock %}
